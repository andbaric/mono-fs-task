@using Project.Service.Models.DTOs.VehicleAdministration.VehicleMakes

@model IEnumerable<ReadMakesDto>

<div class="card-body">
    @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().RenderedAs((model, row) => row + 1).Titled("#").Css("text-center");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.Abrv).Titled("Abrv");
        })
        .Using(GridFilterMode.Header)
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable(pager =>
        {
            pager.PageSizes = new Dictionary<Int32, String> { { 7, "7" }, { 14, "14" }, { 0, "All" } };
                    pager.ShowPageSizes = true;
            })
        )
</div>
