@using Project.MVC.Models.Shared.Enums;
@using Project.Service.Models.DTOs.VehicleAdministration.VehicleMakes;
@using Project.Service.Models.DTOs.VehicleAdministration.VehicleModels;
@using Project.Service.Models.DTOs.VehicleAdministration;

<partial name="~/Views/Shared/Grid/_GridMenu.cshtml" model="Model.Menu" />

@{ if (Model.Type == GridType.Mvc)
    {
        if (Model.DataSource is IEnumerable<ReadOnlyVehiclesDto>)
        {
            <partial name="~/Views/Shared/Grid/Mvc/_VehiclesAdministration.cshtml" model="Model.DataSource" />
        }
        else if (Model.DataSource is IEnumerable<ReadMakesDto>)
        {
            <partial name="~/Views/Shared/Grid/Mvc/_MakesAdministration.cshtml" model="Model.DataSource" />
        }
        else if (Model.DataSource is IEnumerable<ReadModelsDto>)
        {
            <partial name="~/Views/Shared/Grid/Mvc/_ModelsAdministration.cshtml" model="Model.DataSource" />
        }
    }
    else
    {
        if (Model.DataSource is IEnumerable<ReadOnlyVehiclesDto>)
        {
            <partial name="~/Views/Shared/Grid/Custom/_VehiclesAdministration.cshtml" model="Model.DataSource" />
        }
        else if (Model.DataSource is IEnumerable<ReadMakesDto>)
        {
            <partial name="~/Views/Shared/Grid/Custom/_MakesAdministration.cshtml" model="Model.DataSource" />
        }
        else if (Model.DataSource is IEnumerable<ReadModelsDto>)
        {
            <partial name="~/Views/Shared/Grid/Custom/_ModelsAdministration.cshtml" model="Model.DataSource" />
        }
    }
}