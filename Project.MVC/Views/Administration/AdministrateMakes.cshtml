@{
    ViewData["Title"] = "Makes administration";
}
@using Project.MVC.Models.Administration;
@model MakesAdministrationViewModel

<div class="card text-center">
    <div class="card-header">
        <partial name="_Navigation" model="Model.AdministrationNavigation" />
    </div>
    <div class="card-body">

        @(Html
                .Grid(Model.Data)
                .Build(columns =>
                {
                    columns.Add().RenderedAs((model, row) => row + 1).Titled("#").Css("text-center");
                    columns.Add(model => model.Name).Titled("Name");
                    columns.Add(model => model.Abrv).Titled("Abrv");

                })
                .Using(GridFilterMode.Header)
                .Empty("No data found")
                .Filterable()
                .Sortable()
                .Pageable(pager =>
                {
                    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 5, "5" }, { 15, "15" } };
                    pager.ShowPageSizes = true;
                })
            )
    </div>
</div>