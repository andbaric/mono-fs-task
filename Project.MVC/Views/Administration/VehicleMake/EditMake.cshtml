@using Project.Service.Models.DTOs.VehicleAdministration.VehicleMakes
@model UpdateMakeDto 

@{
    ViewData["Title"] = "Edit vehicle make";
}

<h4>Vehicle make</h4>
<i class='fas fa-industry fa-5x'></i>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMake" asp-route-id="@Model.Id" method="post">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Save
                </button>
            </div>
        </form>
        <hr />
        <a asp-action="AdministrateMakes" role="button" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Back to grid
        </a>
    </div>
</div>
