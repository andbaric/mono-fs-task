@using Project.MVC.Models.ViewModels.Administration.VehicleMake
@model CreateMakeViewModel 

@{
    ViewData["Title"] = "Create make";
}

<h4>New make</h4>
<i class='fas fa-industry fa-5x'></i>
<hr />
<div class="row">
    <div class="col-md-4">
        <partial name="_FeedbackMessage" model="Model" />
        <form asp-action="CreateMake" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Create
                </button>
            </div>
        </form>
        <hr />
        <a asp-action="AdministrateMakes" role="button" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Back to grid
        </a>
    </div>
</div>

