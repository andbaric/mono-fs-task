@using Project.Service.Models.DTOs.VehicleAdministration.VehicleModels
@model ReadModelDto


@{
    ViewData["Title"] = "Model info";
}

<div>
    <h4>Vehicle model</h4>
    <i class='fas fa-car-side fa-5x'></i>
    <hr />
    <dl class="row">
        <dt class="col-sm-6 justify-content-end" style="display: flex;">
            @Html.DisplayNameFor(model => model.MakeName):
        </dt>
        <dd class="col-sm-6 justify-content-start" style="display: flex;">
            @Html.DisplayFor(model => model.MakeName)
        </dd>
        <dt class="col-sm-6 justify-content-end" style="display: flex;">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class="col-sm-6 justify-content-start" style="display: flex;">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-6 justify-content-end" style="display: flex;">
            @Html.DisplayNameFor(model => model.Abrv):
        </dt>
        <dd class="col-sm-6 justify-content-start" style="display: flex;">
            @Html.DisplayFor(model => model.Abrv)
        </dd>
    </dl>
    <a asp-action="EditMake" asp-route-id="@Model.Id" role="button" class="btn btn-primary">
        <i class="fas fa-edit"></i>
        Edit
    </a>
    <hr />
    <a asp-action="AdministrateModels" role="button" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>
        Back to grid
    </a>
</div>
